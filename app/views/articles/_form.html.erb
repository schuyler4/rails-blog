<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <% @article.errors.full_messages.each do |msg| %>
      <h4><%= msg %></h4>
    <% end %>
  <%end%>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :text %>
    <%= f.text_area :text %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
